<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#eeeeee">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="@id/et_name"
        app:layout_constraintBottom_toBottomOf="@id/et_name"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/activity_margin_horizontal"
        />
    <EditText
        android:id="@+id/et_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/tv_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="6dp"
        android:textSize="14sp"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="@id/ckb_is_promotion"
        android:layout_marginStart="8dp"
        android:maxLines="1"
        android:layout_marginEnd="@dimen/activity_margin_horizontal"
        android:imeOptions="actionDone"/>
    <TextView
        android:id="@+id/tv_thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/thumbnail"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="@id/spinner_thumnail"
        app:layout_constraintBottom_toBottomOf="@id/spinner_thumnail"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/activity_margin_horizontal"
        />

    <Spinner
        android:id="@+id/spinner_thumnail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/tv_thumbnail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_name"
        android:layout_marginTop="6dp"
        android:textSize="14sp"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="@id/ckb_is_promotion"
        android:layout_marginStart="8dp"
        android:maxLines="1"
        android:imeOptions="actionDone"
        android:layout_marginEnd="@dimen/activity_margin_horizontal"
        android:spinnerMode="dialog"/>

    <TextView
        android:id="@+id/tv_is_promotion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="@id/ckb_is_promotion"
        app:layout_constraintBottom_toBottomOf="@id/ckb_is_promotion"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/promotion"
        android:layout_marginStart="@dimen/activity_margin_horizontal"
        />

    <CheckBox
        android:id="@+id/ckb_is_promotion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/tv_is_promotion"
        app:layout_constraintTop_toBottomOf="@id/spinner_thumnail"
        android:layout_marginTop="6dp"
        android:textSize="14sp"
        />

    <Button
        android:id="@+id/btn_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ckb_is_promotion"
        android:textAllCaps="true"
        android:backgroundTint="#d6d7d7"
        android:text="@string/add_new_dish"
        android:layout_marginHorizontal="@dimen/activity_margin_horizontal"
        android:textColor="@color/black"/>

    <GridView
        android:id="@+id/gv_dishes"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/btn_add"
        android:numColumns="2"
        android:stretchMode="columnWidth"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>